/* pages/mine/mine.wxss */
.bg {
  height: 150px;
  background-color: #6ea7d6;
}
 
.head {
  display: flex;
  flex-direction: column;
}

 
.login {
  display: flex;
  color: #fff;
  font-size: 15px;
  margin-top: 15rpx;
  justify-content: center;
}
 
.button {
  margin: 10px;
  font-size: 14px;
  color: #6ea7d6;
}

 
.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
 
.item {
  display: flex;
  flex-direction: row;
}
 
.title {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 15px;
}
 
.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}
 
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}

.page-body-info {
  padding-bottom: 0;
  height: 230px;
}
.userinfo-avatar {
  border-radius: 100px;
  width: 100px;
  height: 100px;
  
}
.userinfo-nickname {
  margin-top: 10px;
  font-size: 19px;
}


.page-body-text {
  color: #bbb;
  font-size: 14px;
  line-height: 20px;
  margin: 0 0 50px 0;
  text-align: center;
}


